{{!
    @template report_userattend/report/quarters

    Loop through quarters and display attendance data.

    Example context (json):
    {
        "quarters": [
            {
                "quarterid": "12345",
                "quartername": "Quarter 1"
            },
            {
                "quarterid": "67890",
                "quartername": "Quarter 2"
            }
        ]
    }
}}

{{#quarters}}
    <div class="card mb-3">
        {{> report_userattend/report/cardheader}}

        <div id="quarter-{{quarterid}}" class="collapse" role="tabpanel" data-parent="#ao-quarters-accordion">
            {{> report_userattend/report/cardbody}}
        </div>
    </div>
{{/quarters}}

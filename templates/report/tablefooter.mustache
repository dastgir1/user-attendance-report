{{!
    @template report_userattend/report/tablefooter

    Quarter Total in attendance report table.

    Example context (json):
    {
        "quarterpresent": 20,
        "quarterabsent": 5,
        "quarterlate": 3,
        "quartergraderate": 85,
        "quarterlastsession": "3/07/25",
        "userdate": true,
        "str": {
            "report_footer_quarter_total": "Quarter Total"
        }
    }
}}

<tfoot>
    <tr>
        <td>
            <strong>
                {{#str}}report_footer_quarter_total, report_userattend{{/str}}
            </strong>
        </td>
        <td class="text-center">
            <strong>
                {{quarterpresent}}
            </strong>
        </td>
        <td class="text-center">
            <strong>
                {{quarterabsent}}
            </strong>
        </td>
        <td class="text-center">
            <strong>
                {{quarterlate}}
            </strong>
        </td>
        <td class="text-center">
            <strong>
                {{quartergraderate}}%
            </strong>
        </td>
        <td class="text-center">
            <strong>
                {{#isstrlastsession}}
                    {{quarterlastsession}}
                {{/isstrlastsession}}
                {{^isstrlastsession}}
                    {{#userdate}} {{quarterlastsession}}, {{#str}} strftimedatefullshort, core_langconfig {{/str}} {{/userdate}}
                {{/isstrlastsession}}
            </strong>
        </td>
    </tr>
</tfoot>
